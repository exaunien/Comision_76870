{
    "swagger": "2.0",
    "info": {
        "title": "My Backend-3-76870 API",
        "version": "1.0.0",
        "description": "API para gestionar usuarios, mascotas y autenticación en una aplicación de adopción."
    },
    "securityDefinitions": {
        "cookieAuth": {
            "type": "apiKey",
            "name": "coderCookieToken",
            "in": "cookie",
            "description": "Token JWT almacenado en una cookie httpOnly."
        }
    },
    "paths": {
        "/api/users": {
            "get": {
                "tags": ["Users"],
                "summary": "Obtener todos los usuarios",
                "responses": {
                    "200": {
                        "description": "Lista de usuarios obtenida exitosamente"
                    }
                }
            }
        },
        "/api/users/register": {
            "post": {
                "tags": ["Users"],
                "summary": "Registrar un nuevo usuario",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": { "$ref": "#/definitions/User" }
                    }
                ],
                "responses": {
                    "201": { "description": "Usuario registrado exitosamente" },
                    "400": {
                        "description": "Datos inválidos o usuario ya existe"
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "tags": ["Users"],
                "summary": "Iniciar sesión y obtener cookie",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "test@test.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "123456"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Login exitoso, cookie generada" },
                    "401": { "description": "Credenciales inválidas" }
                }
            }
        },
        "/api/users/profile": {
            "get": {
                "tags": ["Users"],
                "summary": "Obtener perfil del usuario logueado",
                "security": [{ "cookieAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Datos del perfil retornados correctamente"
                    },
                    "401": { "description": "No autorizado / Sin token" }
                }
            }
        },
        "/api/users/restore-password": {
            "put": {
                "tags": ["Users"],
                "summary": "Restablecer contraseña de usuario",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": { "type": "string" },
                                "password": {
                                    "type": "string",
                                    "description": "Nueva contraseña"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Contraseña actualizada" },
                    "404": { "description": "Usuario no encontrado" }
                }
            }
        },
        "/api/users/{uid}": {
            "get": {
                "tags": ["Users"],
                "summary": "Obtener un usuario por ID",
                "parameters": [
                    {
                        "name": "uid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": { "description": "Usuario obtenido" },
                    "404": { "description": "No encontrado" }
                }
            },
            "put": {
                "tags": ["Users"],
                "summary": "Actualizar usuario",
                "parameters": [
                    {
                        "name": "uid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "schema": { "$ref": "#/definitions/UserUpdate" }
                    }
                ],
                "responses": {
                    "200": { "description": "Actualizado" }
                }
            },
            "delete": {
                "tags": ["Users"],
                "summary": "Eliminar usuario",
                "parameters": [
                    {
                        "name": "uid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": { "description": "Eliminado" }
                }
            }
        },
        "/api/pets": {
            "get": {
                "tags": ["Pets"],
                "summary": "Obtener todas las mascotas",
                "responses": { "200": { "description": "Lista de mascotas" } }
            },
            "post": {
                "tags": ["Pets"],
                "summary": "Crear mascota",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "schema": { "$ref": "#/definitions/Pet" }
                    }
                ],
                "responses": { "201": { "description": "Creada" } }
            }
        },
        "/api/adoptions": {
            "get": {
                "tags": ["Adoptions"],
                "summary": "Obtener todas las adopciones",
                "responses": { "200": { "description": "Listado obtenido" } }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "required": ["first_name", "last_name", "email", "password"],
            "properties": {
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
            }
        },
        "UserUpdate": {
            "type": "object",
            "properties": {
                "first_name": { "type": "string" },
                "last_name": { "type": "string" },
                "email": { "type": "string" },
                "role": { "type": "string", "enum": ["user", "admin"] }
            }
        },
        "Pet": {
            "type": "object",
            "required": ["name", "specie"],
            "properties": {
                "name": { "type": "string" },
                "specie": { "type": "string" },
                "birthDate": { "type": "string", "format": "date" },
                "adopted": { "type": "boolean", "default": false }
            }
        }
    }
}
